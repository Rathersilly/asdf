<p id="notice"><%= notice %></p>

<h1>Sits</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sits.each do |sit| %>
      <tr>
        <td>Owner: <%=sit.person.name%></td>
        <td>Sitter: <%=sit.sitter.name%></td>
        <td>Time: <%=sit.date%></td>
        <td>Duration<%=sit.duration%></td>
        <td><%= link_to 'Show', sit %></td>
        <td><%= link_to 'Edit', edit_sit_path(sit) %></td>
        <td><%= link_to 'Destroy', sit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

